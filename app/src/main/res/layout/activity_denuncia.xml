<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Denuncia"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/tv_denuncia"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FF0000"
            android:gravity="center"
            android:text="FORMULARIO DE DENUNCIA"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="378dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="98dp"
                android:layout_height="276dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sobre"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="45dp"
                    android:text="Motivo:"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_direccion"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="60dp"
                    android:text="DirecciÃ³n:"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_imagen"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="60dp"
                    android:text="Imagen:"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="141dp"
                android:layout_height="275dp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/sp_denuncia"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginTop="30dp" />


                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Actual"
                    tools:layout_editor_absoluteX="162dp"
                    tools:layout_editor_absoluteY="453dp" />

                <Button
                    android:id="@+id/btn_cargar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="Capturar"
                    tools:layout_editor_absoluteX="162dp"
                    tools:layout_editor_absoluteY="453dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="119dp"
                android:layout_height="275dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="120dp"
                    android:text="Buscar"
                    tools:layout_editor_absoluteX="162dp"
                    tools:layout_editor_absoluteY="453dp" />

                <Button
                    android:id="@+id/btn_capturar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="Cargar"
                    tools:layout_editor_absoluteX="162dp"
                    tools:layout_editor_absoluteY="453dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="Guardar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="@drawable/btn_redondeado_negro"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="Cancelar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="@drawable/btn_redondeado_negrovd"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>